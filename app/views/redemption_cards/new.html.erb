<nav class="logo-container">
  <img class="logo-center" src="http://res.cloudinary.com/codehunt/image/upload/c_scale,w_120/v1461658809/logo_ubhtk5.png" alt="The Atlantic" />
</nav>
<p class="login-as">
  You're logged in as: <%= current_user.email %>
</p>
<div class="redeem-page-wrapper">

  <div class="redeem-wrapper">


      <h2 class="redeem-title">Redeem your gift card!</h2>

      <!-- Error messages -->
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <ul>
            <li class="flash-message-item-redeem"><%= error %></li>
          </ul>
        <% end %>
      <% elsif flash[:success]%>
          <% flash[:success].each do |notice| %>
            <ul>
              <li class="flash-message-item-redeem"><%= notice %></li>
            </ul>
          <% end %>
      <% end %>

      <form class="" action="/redemption_cards" method="post">
        <%= auth_token %>
        <input class="input-field" type="text" name="redemption_card[card_code]" id="card-code" placeholder="Enter your 16 digits card code" value="<%= @redemption_card.nil? ? '' : "#{@redemption_card.card_code}"%>">
        <br>
        <br>
        <input class="input-field" type="text" name="redemption_card[card_pin]" id="card-Pin" value="<%= @redemption_card.nil? ? '' : "#{@redemption_card.card_code}"%>" placeholder="Enter your 4 digits pin">
        <br>
        <br>
        <input class="submit-button" type="submit" value="Redeem!">
      </form>

  </div>

  <div class="balance-archive-wrapper">
    <div class="balance-area">
      Your balance is currently: $<%= current_user.balance %>
    </div>

    <table>
      <tr>
        <th># Gift Card</th>
        <th>Date</th>
        <th>Receiver</th>
        <th>Amount</th>
      </tr>
      <tr>
        <td>12987117239712</td>
